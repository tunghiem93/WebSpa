@model CMS_DTO.CMSProcedures.CMS_ProceduresModels
@using CMS_Common
<div role="main" style="display:inline-block;height:100%;width:100%">
    @*<div class="se-pre-con" style="display: none;"></div>*@
    <div class="page-title">
        <!-- BEGIN PAGE BAR -->
        @Html.Partial("_breadcrumb", new Dictionary<string, string> { { "A", "Trang chủ" }, { "B", "Liệu trình - Xem" } })
        <!-- END PAGE BAR -->
    </div>
    <div class="page-main">
        <div class="col-md-12 col-sm-12 col-xs-12 x_panel">
            <div class="x_content">
                <div class="row text-right">
                    <ul class="header-buttons pull-right list-inline">
                        <li>
                            <a href="javascript:void(0)" class="btn btn-danger" id="btn-delete" onclick="CloseDetail()">
                                <i class="fa fa-times"></i>
                                &nbsp;Hủy
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="box-body" style="display: block;">
                    <div class="row form-horizontal form-label-left" style="margin-bottom:15px;">

                        @*Image*@
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12 lineHeight fontLighter">Image</label>
                            <div class="col-md-2 col-sm-2 col-xs-12">
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img id="upload-preview" src="@Model.ImageUrl" height="100" width="200" class="" />
                                }
                                else
                                {
                                    <img id="upload-preview" class="" src="@Commons.Image500_500" height="100" width="200" />
                                }
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12 fontLighter">Mã liệu trình</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <label style="margin-top:1%">@Model.ProductCode</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12 lineHeight fontLighter">Tên liệu trình</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <label style="margin-top:1%">@Model.ProceduresName</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12 lineHeight fontLighter">Thời gian</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <label style="margin-top:1%">@Model.Duration</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12 lineHeight fontLighter">Giá</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <label style="margin-top:1%">@Model.Price</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12 lineHeight fontLighter">Tiêu đề</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <label style="margin-top:1%">@Model.ShortDescription</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12 fontLighter">Trạng thái</label>
                            <div class="col-md-1 col-sm-1 col-xs-12">
                                <label style="margin-top:10%">@string.Format("{0}", Model.IsActive ? "Kích hoạt" : "Chưa kích hoạt")</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12 fontLighter">Chuẩn bị</label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                @Html.Raw(Model.Preparation)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12 fontLighter">Quá trình</label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                @Html.Raw(Model.Process)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12 fontLighter">Điều trị</label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                @Html.Raw(Model.SpaTreatment)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12 fontLighter">Hiệu quả</label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                @Html.Raw(Model.Description)
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
