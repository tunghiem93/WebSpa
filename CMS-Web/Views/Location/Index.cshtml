@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model CMS_DTO.CMSLocation.CMSLocationModels
@using CMS_Common;

<div id="main">
    <section class='title-section'>
        <div class="title-wrapper">
            <div class="container">
                <div class="border-title aligncenter">
                    <h1>Location</h1>
                    <h6>We provide lots of spa service. Enjoy your dreams with spa!</h6>
                </div>
            </div>
        </div>
    </section>
    <section id="primary" class="content-full-width">
        <div id="post-183" class="post-183 page type-page status-publish hentry">
            <div id="" class="responsive-map" style="height:500px;width:100%;">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.8598890807275!2d106.68197131435012!3d10.745279992342692!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752fa9c71d7d4b%3A0xe8f2de04a3be587c!2zMTgxLzI5IMOCdSBExrDGoW5nIEzDom4sIFBoxrDhu51uZyAyLCBRdeG6rW4gOCwgSOG7kyBDaMOtIE1pbmgsIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1532684798572" frameborder="0" style="border:0; width: 100%; height: 100%" allowfullscreen></iframe>
            </div>
            <div class='fullwidth-section ' style="background-image:url('../Content/border/border.png');background-repeat:repeat-x;background-position:left top;padding-top:95px;padding-bottom:50px;">
                <div class="container">
                    <div class='column dt-sc-three-fourth  space first'>
                        <h2>Customer Care</h2>
                        <div class="dt-sc-contact-info">
                            <i class='fa fa-envelope'></i>
                            <span>Email</span>
                            <a href="javascript:void(0)">
                                <span class="__cf_email__" data-cfemail="">lamodehome@gmail.com</span>
                            </a>
                            <span class='details'>24/7</span>
                        </div>
                        <div class="dt-sc-contact-info">
                            <i class='fa fa-comment'></i>
                            <span>Chat</span>
                            <p>Live Chat (offline)</p>
                            <span class='details'>
                                Mon - Fri 9AM - 8:30PM
                            </span>
                        </div>
                        <div class="dt-sc-contact-info">
                            <i class='fa fa-phone'></i>
                            <span>Phone/Booking</span>
                            <p>0932 015 818 (offline)</p>
                            <span class='details'>
                                Mon - Fri 9AM - 8:30PM
                            </span>
                        </div>                        
                    </div>
                    <div class='column dt-sc-one-fourth  space '>
                        <h2>Mailing Address</h2>
                        <div class="dt-sc-contact-info">
                            <i class='fa fa-rocket'></i>181/29 Âu Dương Lân, Phường 2, Quận 8, Hồ Chí Minh
                        </div>
                    </div>
                </div>
            </div>
            <div class='fullwidth-section'>
                <div class="container">
                    <div class='column dt-sc-two-third space first'>
                        <h2> Give us a Message</h2>
                        <div class="" id="" lang="en-US" dir="ltr">
                            <div class="screen-reader-response"></div>
                            @using (@Html.BeginForm("SendToMail", "Location", FormMethod.Post, new { @class = "form-horizontal create-form", @enctype = "multipart/form-data", @style = "" }))
                            {                                
                                <div class="column dt-sc-one-half first">
                                    <p>
                                        <span class="">
                                            @Html.TextBoxFor(model => model.ContactDTO.Name, new { @class = "form-control input-text", @id = "Name", @placeholder = "*Name", @type = "Text", @Size = "40" })
                                            @Html.ValidationMessageFor(model => model.ContactDTO.Name, null, new { @class = "label label-danger", })
                                            @*<input type="text" name="your-name" value="" size="40" class="wpcf7-form-control wpcf7-text wpcf7-validates-as-required" aria-required="true" aria-invalid="false" placeholder="Name" />*@
                                        </span>
                                    </p>
                                    <p>
                                        <span class="">
                                            @Html.TextBoxFor(model => model.ContactDTO.Email, new { @class = "form-control input-text", @id = "Email", @placeholder = "*Email", @type = "email", @Size = "40" })
                                            @Html.ValidationMessageFor(model => model.ContactDTO.Email, null, new { @class = "label label-danger", })
                                            @*<input type="email" name="your-email" value="" size="40" class="wpcf7-form-control wpcf7-text wpcf7-email wpcf7-validates-as-required wpcf7-validates-as-email" aria-required="true" aria-invalid="false" placeholder="Email" />*@
                                        </span>
                                    </p>
                                </div>
                                <div class="column dt-sc-one-half">
                                    <p>
                                        <span class="">
                                            @Html.TextAreaFor(model => model.ContactDTO.Message, new { @class = "form-control input-text", @id = "Message", @placeholder = "Message", @type = "email", @Size = "40", @cols = "40", @rows = "10" })
                                            @Html.ValidationMessageFor(model => model.ContactDTO.Message, null, new { @class = "label label-danger", })
                                            @*<textarea name="your-message" cols="40" rows="10" class="wpcf7-form-control wpcf7-textarea" aria-invalid="false" placeholder="Message"></textarea>*@
                                        </span>
                                    </p>
                                </div>
                                <p>
                                    <input type="submit" value="Submit" class="" />
                                </p>
                                <div class="wpcf7-response-output wpcf7-display-none"></div>
                            }
                        </div>
                    </div>
                    <div class='column dt-sc-one-third space '>
                        <p style="font-size: 16px; color: #37251b;">Book now for a Spa</p>
                        <div class='dt-sc-hr-invisible-small'></div>
                        <p>
                            <img class="alignleft size-full wp-image-180" style="max-width: 105px; margin-bottom: 10px;" src="/Images/callout-image2.png"
                                 alt="callout-image2" width="163" height="154" />
                        </p>
                        <p>
                            Hope you have seen our wide range of services for spa and herbal treatments. Book now for your convienent
                            schedule and enjoy the spa treatment and wellness of life.
                        </p>
                        <p style="text-align: right;">
                            <a href='#' target='_blank' class='dt-sc-button small without-icon'>
                                <span>Click me!</span>
                            </a>
                    </div>
                </div>
            </div>
            <div class='fullwidth-section ' style="background-image:url(/Content/border/border.png);background-repeat:repeat-x;padding-top:95px;padding-bottom:50px;">
                <div class="container">
                    <h2> TODAY&#8217;S SPECIAL OFFER</h2>
                    <div class='dt-sc-images-carousel-wrapper' data-min='1' data-max='2' data-width='520'>
                        <ul class='dt-sc-images-carousel'>
                            @if (Model.LstDiscount != null && Model.LstDiscount.Any())
                            {
                                foreach (var item in Model.LstDiscount)
                                {
                                    <li>
                                        <a href="javascript:void(0)">
                                            <img title="@item.Name" src="@item.ImageUrl" alt="@item.Name" />
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                        <div class="carousel-arrows">
                            <a href="" class="images-carousel-prev">
                                <span class="fa fa-angle-left"> </span>
                            </a>
                            <a href="" class="images-carousel-next">
                                <span class="fa fa-angle-right"> </span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="social-bookmark"></div>
                <div class="social-share"></div>
            </div>
        </div>
    </section>
</div>

<script type="text/javascript">
    jQuery(document).ready(function ($) {

    });
</script>
