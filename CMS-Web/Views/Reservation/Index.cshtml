@model CMS_DTO.CMSReservation.CMS_ReservationViewModels
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="wrapper">
    <div class="inner-wrapper">
        <div id="main">
            <section class='title-section'>
                <div class="title-wrapper">
                    <div class="container">
                        <div class="border-title aligncenter">
                            <h1>Đặt chỗ</h1>
                            <h6>Đăng ký để được tư vấn từ chúng tôi!</h6>
                        </div>
                    </div>
                </div>
            </section>
            <div class="container">
                <section id="primary" class="content-full-width">
                    <div class="dt-sc-reservation">
                        @using (@Html.BeginForm("Book", "Reservation", FormMethod.Post, new { @class = "form-horizontal create-form", @enctype = "multipart/form-data", @style = "" }))
                        {
                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12 lineHeight fontLighter">
                                    Khách hàng
                                    <abbr class="required" title="required">*</abbr>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(model => model.CustomerName, new { @class = "form-control", @placeholder = "Tên khách hàng", @autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.CustomerName, null, new { @class = "label label-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12 lineHeight fontLighter">
                                    Số điện thoại
                                    <abbr class="required" title="required">*</abbr>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "Số điện thoại", @autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.Phone, null, new { @class = "label label-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12 lineHeight fontLighter">
                                    Liệu trình
                                    <abbr class="required" title="required">*</abbr>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.DropDownListFor(model => model.ProductID,
                                            new SelectList(Model.ListProducts, "Id", "ProductName", Model.ProductID), "Vui lòng chọn liệu trình",
                                            new
                                            {
                                                @class = "form-control select2_multiple",
                                                @id = "CategoryDdl",
                                                @style = "width:100%;"
                                            })
                                    @Html.ValidationMessageFor(model => model.ProductID, null, new { @class = "label label-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12 lineHeight fontLighter">Ngày đặt</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(model => model.BookDay, new { @class = "form-control datepicker1 has-feedback-left", @placeholder = "Ngày đặt", @autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.BookDay, null, new { @class = "label label-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12 lineHeight fontLighter">Thời gian bắt đầu</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @*<input type="time" name="@Model.FromTime" id="@Model.FromTime">*@
                                    @Html.TextBoxFor(model => model.FromTime, new { @class = "form-control ", type = "time" })

                                </div>
                            </div>


                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12 lineHeight fontLighter">Ghi chú</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextAreaFor(model => model.Remark, new { @class = "form-control", @placeholder = "Ghi chú", @autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.Remark, null, new { @class = "label label-danger" })
                                </div>
                            </div>

                            <div class="title" style="">
                                <input type="submit" value="Đặt" style="float: inherit !important; " />
                            </div>
                        }
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>

